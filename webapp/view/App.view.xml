<mvc:View
   controllerName="de.alxsoft.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:t="sap.ui.table"
   >

   <Button
      text="Say Hello"
      press="onShowHello"/>

   <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
      


    <t:Table
        rows="{/mytable}"
        title="Test"
        selectionMode="MultiToggle"
        visibleRowCount="7">
        <t:columns>
            <t:Column width="11rem">
                <Label text="Name" />
                <t:template>
                    <Text text="{name}"/>
                </t:template>
            </t:Column>
            <t:Column width="11rem">
                <Label text="Id" />
                <t:template>
                    <Input value="{id}"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>

</mvc:View>