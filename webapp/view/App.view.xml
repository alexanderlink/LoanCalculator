<mvc:View
   controllerName="de.alxsoft.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:u="sap.ui.unified"
   >

<TabContainer items="{ path: '/tabs' }" id="myTabContainer"
				showAddNewButton="true"
				addNewButtonPress="addNewButtonPressHandler" itemClose="itemCloseHandler">
	<items >
		<TabContainerItem name="{tabTitle}" modified="false">
			<content>


<Page visible="{= ${index} > 0 }">
<Panel headerText="Input" expandable="true" expanded="true" width="auto">
  <content>
   <Input
      value="{input/darlehnsbetrag}"
      description="Darlehnsbetrag €"
      valueLiveUpdate="true" liveChange="calculate" type="Number" width="33%"/>

	<Input description="Sollzins %"
		value="{input/sollzins}"
		valueLiveUpdate="true" liveChange="calculate" width="33%"/>

	<Input description="Zinsbindung Jahre"
		value="{input/zinsbindung}"
		valueLiveUpdate="true" liveChange="calculate" width="33%"/>

	<Input description="Anfangstilgung %"
		value="{input/anfangstilgung}"
		valueLiveUpdate="true" liveChange="calculate" width="33%"/>

	<Input description="Alter"
		value="{input/alter}"
		valueLiveUpdate="true" liveChange="calculate" width="33%"/>

	<Input description="Sollzins Betrag"
		value="{input/sollzinsBetrag}"
		valueLiveUpdate="true" liveChange="calculate" width="33%"/>
  </content>
</Panel>

<Panel headerText="Output" expandable="true" expanded="false" width="auto">
  <content>
	<Input description="Anfangstilgung Betrag"
		value="{input/anfangstilgungBetrag}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Rate / Jahr"
		value="{input/rateJahr}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Rate / Monat"
		value="{input/rateMonat}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Zins Summe"
		value="{input/zinsSumme}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Tilgung Summe"
		value="{input/tilgungSumme}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Summe Alles"
		value="{input/summeAlles}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Restschuld"
		value="{input/restSchuld}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Alter nach Zinsbindung"
		value="{input/alterZinsBindung}"
		valueLiveUpdate="true" enabled="false" width="33%"/>
  </content>
</Panel>

<Panel headerText="Table" expandable="true" expanded="true" width="auto">
  <content>
    <Table
		inset="false"
		items="{path: 'dataYear'}">
		<columns>
			<Column>
				<Text text="Jahr" />
			</Column>
			<Column width="8em">
				<Text text="Zinsen" />
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true">
				<Text text="Tilgung" />
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true">
				<Text text="Restschuld" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{year}" />
					<u:Currency value="{zinsen}" currency="EUR" useSymbol="true" />
					<u:Currency value="{tilgung}" currency="EUR" useSymbol="true" />
					<u:Currency value="{restSchuld}" currency="EUR" useSymbol="true" />
				</cells>
			</ColumnListItem>
		</items>
    </Table>
  </content>
</Panel>
</Page>





<Page visible="{= ${index} === 0 }">
   <Input
      value="{input/darlehnsbetrag}"
      description="Darlehnsbetrag €"
      valueLiveUpdate="true" liveChange="calculate" type="Number" width="33%"/>

	<Input description="Sollzins Betrag"
		value="{input/sollzinsBetrag}"
		valueLiveUpdate="true" liveChange="calculate" width="33%"/>

	<Input description="Anfangstilgung Betrag"
		value="{input/anfangstilgungBetrag}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Rate / Jahr"
		value="{input/rateJahr}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Rate / Monat"
		value="{input/rateMonat}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Zins Summe"
		value="{input/zinsSumme}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Tilgung Summe"
		value="{input/tilgungSumme}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Summe Alles"
		value="{input/summeAlles}"
		valueLiveUpdate="true" enabled="false" width="33%"/>

	<Input description="Restschuld"
		value="{input/restSchuld}"
		valueLiveUpdate="true" enabled="false" width="33%"/>
</Page>



			</content>
		</TabContainerItem>
	</items>
</TabContainer>

</mvc:View>